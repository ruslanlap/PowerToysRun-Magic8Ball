<Window x:Class="Community.PowerToys.Run.Plugin.Magic8Ball.Magic8BallResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Magic 8-Ball"
        Height="560"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#707070"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовка -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="10" Padding="20" CornerRadius="8">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#2D2D30" Offset="0.0"/>
                <GradientStop Color="#1E1E1E" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Text="Magic 8-Ball" Style="{StaticResource HeaderTextStyle}"/>

                <!-- Область анімації/відображення 8-Ball -->
                <Grid Grid.Row="1" Margin="10,0,10,0">
                    <!-- Статичне зображення 8-Ball -->
                    <Image x:Name="StaticBallImage"
                           Stretch="Uniform"
                           MaxHeight="240"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                    <!-- Контейнер для анімації (відображається під час анімації) -->
                    <Border x:Name="AnimationContainer"
                            Background="Transparent"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                        <MediaElement x:Name="BallAnimation"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Stop"
                                      MediaEnded="BallAnimation_MediaEnded"
                                      Width="140"
                                      Height="140"
                                      Stretch="Uniform"/>
                    </Border>
                    <!-- Трикутник з відповіддю -->
                    <Grid x:Name="AnswerTriangle"
                          Width="300"
                          Height="300"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Visibility="Collapsed">
                        <Polygon Opacity="0.8" Points="0,0 240,0 120,240">
                            <Polygon.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#000088" Offset="0"/>
                                    <GradientStop Color="#4444CC" Offset="1"/>
                                </LinearGradientBrush>
                            </Polygon.Fill>
                        </Polygon>
                        <TextBlock x:Name="AnswerText"
                                   Text=""
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="50,30,50,100"/>
                    </Grid>
                </Grid>

            <!-- Секція з питанням та відповіддю -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Question:" FontSize="16" FontWeight="SemiBold" Foreground="#FFCC00" Margin="0,0,10,0" VerticalAlignment="Top"/>
                    <TextBlock x:Name="QuestionTextBlock"
                               Grid.Column="1"
                               FontSize="16"
                               Foreground="#E0E0E0"
                               TextWrapping="Wrap"/>
                </Grid>
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Response:" FontSize="16" FontWeight="SemiBold" Foreground="#88CCFF" Margin="0,0,10,0" VerticalAlignment="Top"/>
                    <TextBlock x:Name="ResponseTextBlock"
                               Grid.Column="1"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#88CCFF"
                               TextWrapping="Wrap"/>
                </Grid>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Type:" FontSize="16" FontWeight="SemiBold" Foreground="#FFAA55" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ResponseTypeTextBlock"
                               Grid.Column="1"
                               FontSize="14"
                               Foreground="#FFAA55"/>
                </Grid>
            </StackPanel>

            <!-- Кнопки -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AskAgainButton"
                        Grid.Column="0"
                        Content="Ask Again"
                        Margin="0,0,5,0"
                        Click="AskAgainButton_Click"
                        Style="{StaticResource CustomButtonStyle}"/>
                <Button x:Name="CloseButton"
                        Grid.Column="1"
                        Content="Close"
                        Margin="5,0,0,0"
                        Click="CloseButton_Click"
                        Style="{StaticResource CustomButtonStyle}"/>
            </Grid>
        </Grid>
    </Border>
</Window>